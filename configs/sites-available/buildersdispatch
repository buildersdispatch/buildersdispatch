upstream api_backend {
    server 127.0.0.1:3000;
}

server {
    listen 80;
    listen [::]:80;
    server_name buildersdispatch.com www.buildersdispatch.com;
    
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
    
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name buildersdispatch.com www.buildersdispatch.com;
    
    ssl_certificate /etc/letsencrypt/live/buildersdispatch.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/buildersdispatch.com/privkey.pem;
    
    root /var/www/buildersdispatch/frontend;
    index index.html;
    
    location /api/ {
        proxy_pass http://api_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
    
    location / {
        try_files $uri $uri/ /index.html;
    }
}

server {
    listen 80;
    listen [::]:80;
    server_name xasix.com www.xasix.com;
    
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name xasix.com www.xasix.com;
    
    ssl_certificate /etc/letsencrypt/live/xasix.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/xasix.com/privkey.pem;
    
    root /var/www/xasix;
    index index.html;
    
    location / {
        try_files $uri $uri/ =404;
    }
}
